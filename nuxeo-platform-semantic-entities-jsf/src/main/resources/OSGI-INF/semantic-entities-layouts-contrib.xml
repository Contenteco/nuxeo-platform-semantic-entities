<?xml version="1.0"?>
<component name="org.nuxeo.ecm.platform.semanticentities.jsf.layouts">

  <extension target="org.nuxeo.ecm.platform.forms.layout.WebLayoutManager"
    point="layouts">

    <layout name="entity_summary_layout">
      <templates>
        <template mode="any">/layouts/layout_summary_template.xhtml</template>
      </templates>
      <rows>
        <row>
          <widget>summary_current_entity_heading</widget>
          <widget>summary_current_entity_view</widget>
          <widget>summary_current_document_comments</widget>
        </row>
        <row>
          <widget>summary_current_document_lc_and_version</widget>
          <widget>summary_current_document_actions</widget>
        </row>
        <row>
          <widget>summary_current_document_single_tasks</widget>
        </row>
      </rows>
    </layout>

    <layout name="entity_heading">
      <templates>
        <template mode="any">/layouts/layout_default_template.xhtml</template>
      </templates>
      <rows>
        <row>
          <widget>name</widget>
        </row>
        <row>
          <widget>summary</widget>
        </row>
        <row>
          <widget>depiction</widget>
        </row>
        <row>
          <widget>altnames</widget>
        </row>
        <row>
          <widget>entityType</widget>
        </row>
      </rows>
      <widget name="name" type="text">
        <fields>
          <field>dc:title</field>
        </fields>
        <widgetModes>
          <mode value="view">hidden</mode>
          <mode value="any">edit</mode>
        </widgetModes>
        <properties widgetMode="edit">
          <property name="required">true</property>
          <property name="styleClass">dataInputText</property>
        </properties>
      </widget>
      <widget name="summary" type="textarea">
        <fields>
          <field>entity:summary</field>
        </fields>
        <widgetModes>
          <mode value="view">hidden</mode>
          <mode value="any">edit</mode>
        </widgetModes>
        <properties widgetMode="edit">
          <property name="styleClass">dataInputText</property>
        </properties>
      </widget>
      <widget name="depiction" type="template">
        <fields>
          <field>entity:depiction</field>
        </fields>
        <widgetModes>
          <mode value="view">hidden</mode>
          <mode value="any">edit</mode>
        </widgetModes>
        <properties mode="any">
          <property name="template">
            /widgets/extended_file_widget.xhtml
          </property>
        </properties>
      </widget>
      <widget name="altnames" type="namelist">
        <widgetModes>
          <mode value="view">#{nxu:test(empty layoutValue.entity.altnames, 'hidden', 'view')}</mode>
	      <mode value="any">edit</mode>
	    </widgetModes>
	    <fields>
	      <field>entity:altnames</field>
	    </fields>
	    <subWidgets>
	      <widget name="altname" type="text">
	        <fields>
	          <field></field>
	        </fields>
	      </widget>
	    </subWidgets>
        <properties widgetMode="edit">
          <property name="styleClass">dataInputText</property>
        </properties>
      </widget>
      <widget name="entityType" type="template">
        <widgetModes>
          <mode value="view">view</mode>
          <mode value="any">hidden</mode>
        </widgetModes>
        <properties widgetMode="view">
          <property name="template">
            /widgets/entity_type_widget_template.xhtml
          </property>
        </properties>
      </widget>
    </layout>

    <layout name="person">
      <templates>
        <template mode="any">/layouts/layout_default_template.xhtml</template>
      </templates>
      <rows>
        <row>
          <widget>birthDate</widget>
        </row>
        <row>
          <widget>deathDate</widget>
        </row>
        <!-- TODO add widgets for relationship with
         common relationships with organizations (position)
          and places (birthplace, residence)  -->
      </rows>
      <widget name="birthDate" type="datetime">
         <widgetModes>
          <mode value="view">
            #{empty layoutValue.person.birthDate ? 'hidden' : 'view'}
          </mode>
        </widgetModes>
        <fields>
          <field>person:birthDate</field>
        </fields>
        <properties widgetMode="edit">
          <property name="styleClass">dataInputText</property>
        </properties>
      </widget>
      <widget name="deathDate" type="datetime">
         <widgetModes>
          <mode value="view">
            #{empty layoutValue.person.deathDate ? 'hidden' : 'view'}
          </mode>
        </widgetModes>
        <fields>
          <field>person:deathDate</field>
        </fields>
        <properties widgetMode="edit">
          <property name="styleClass">dataInputText</property>
        </properties>
      </widget>
    </layout>

    <layout name="place">
      <templates>
        <template mode="any">/layouts/layout_default_template.xhtml</template>
      </templates>
      <rows>
        <row>
          <widget>latitude</widget>
        </row>
        <row>
          <widget>longitude</widget>
        </row>
        <!-- TODO: replace those widgets with a world map -->
      </rows>
      <widget name="latitude" type="text">
         <widgetModes>
          <mode value="view">
            #{empty layoutValue.place.latitude ? 'hidden' : 'view'}
          </mode>
        </widgetModes>
        <fields>
          <field>place:latitude</field>
        </fields>
        <properties widgetMode="edit">
          <property name="styleClass">dataInputText</property>
        </properties>
      </widget>
      <widget name="longitude" type="text">
         <widgetModes>
          <mode value="view">
            #{empty layoutValue.place.longitude ? 'hidden' : 'view'}
          </mode>
        </widgetModes>
        <fields>
          <field>place:longitude</field>
        </fields>
        <properties widgetMode="edit">
          <property name="styleClass">dataInputText</property>
        </properties>
      </widget>
    </layout>

    <layout name="organization">
      <templates>
        <template mode="any">/layouts/layout_default_template.xhtml</template>
      </templates>
      <rows>
        <row>
          <widget>inceptionDate</widget>
        </row>
        <row>
          <widget>dissolutionDate</widget>
        </row>
        <!-- TODO add widgets for relationship with
         common relationships with persons (founder, leader)
          and places (headquartersLocation)  -->
      </rows>
      <widget name="inceptionDate" type="datetime">
         <widgetModes>
          <mode value="view">
            #{empty layoutValue.organization.inceptionDate ? 'hidden' : 'view'}
          </mode>
        </widgetModes>
        <fields>
          <field>organization:inceptionDate</field>
        </fields>
        <properties widgetMode="edit">
          <property name="styleClass">dataInputText</property>
        </properties>
      </widget>
      <widget name="dissolutionDate" type="datetime">
         <widgetModes>
          <mode value="view">
            #{empty layoutValue.organization.dissolutionDate ? 'hidden' : 'view'}
          </mode>
        </widgetModes>
        <fields>
          <field>organization:dissolutionDate</field>
        </fields>
        <properties widgetMode="edit">
          <property name="styleClass">dataInputText</property>
        </properties>
      </widget>
    </layout>

  </extension>

  <extension target="org.nuxeo.ecm.platform.forms.layout.WebLayoutManager"
    point="widgets">

    <widget name="summary_current_entity_heading"
      type="summary_current_entity_heading" />

    <widget name="summary_current_entity_view"
      type="summary_current_entity_view" />

   </extension>

  <extension target="org.nuxeo.ecm.platform.forms.layout.WebLayoutManager"
    point="widgettypes">

    <widgetType name="summary_current_entity_heading">

      <documentation>
        This widget displays the heading common to all entities: depiction, entity type
        and summary. The canonical name is expected to be displayed on above the entity
        tabs hence not part of this summary widget.

        It requires the following variables to be present in the EL context:
        <ul>
          <li>currentDocument: the current document</li>
          <li>currentDocumentType : the Type of the current document</li>
        </ul>
      </documentation>

      <handler-class>
        org.nuxeo.ecm.platform.forms.layout.facelets.plugins.TemplateWidgetTypeHandler
      </handler-class>
      <property name="template">
        /widgets/summary/summary_current_entity_heading_widget_template.xhtml
      </property>
    </widgetType>

    <widgetType name="summary_current_entity_view">

      <documentation>
        This widgets displays the view layouts of the currentDocument as an Entity

        It requires the following variables to be present in the EL context:
        <ul>
          <li>currentDocument: the current document</li>
          <li>currentDocumentType : the Type of the current document</li>
        </ul>
      </documentation>

      <handler-class>
        org.nuxeo.ecm.platform.forms.layout.facelets.plugins.TemplateWidgetTypeHandler
      </handler-class>
      <property name="template">
        /widgets/summary/summary_current_entity_view_widget_template.xhtml
      </property>
    </widgetType>


    <widgetType name="namelist">
      <documentation>
        Template widget dedicated to displaying and editing list of names (short string list).
      </documentation>
      <handler-class>
        org.nuxeo.ecm.platform.forms.layout.facelets.plugins.TemplateWidgetTypeHandler
      </handler-class>
      <property name="template">/widgets/namelist_widget_template.xhtml</property>
    </widgetType>

  </extension>

</component>
