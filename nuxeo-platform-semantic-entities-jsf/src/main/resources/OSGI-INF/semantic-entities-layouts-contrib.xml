<?xml version="1.0"?>
<component name="org.nuxeo.ecm.platform.semanticentities.jsf.layouts">

  <require>org.nuxeo.ecm.platform.forms.layouts.webapp.summary</require>

  <extension target="org.nuxeo.ecm.platform.forms.layout.WebLayoutManager"
    point="layouts">

    <layout name="entity_short_summary_layout">
      <templates>
        <template mode="any">/layouts/layout_entity_short_summary_template.xhtml
        </template>
      </templates>
      <!--TODO: make the list of widget customizable -->
    </layout>

    <layout name="entity_summary_layout">
      <templates>
        <template mode="any">/layouts/layout_summary_template.xhtml
        </template>
      </templates>
      <rows>
        <row>
          <widget>summary_current_entity_occurrences</widget>
          <widget>summary_current_document_comments</widget>
        </row>
        <row>
          <widget>summary_current_entity_heading</widget>
          <widget>summary_current_entity_view</widget>
          <widget>summary_current_entity_sync</widget>
          <!-- Should be moved to the top
          <widget>summary_current_document_actions</widget>
          <widget>summary_current_document_lc_and_version</widget>
          -->
        </row>
        <row>
          <widget>summary_current_document_single_tasks</widget>
        </row>
      </rows>
      <widget name="summary_current_entity_heading" type="summary_current_entity_heading" />
      <widget name="summary_current_entity_occurrences" type="summary_current_entity_occurrences" />
      <widget name="summary_current_entity_view" type="summary_current_entity_view" />
      <widget name="summary_current_entity_sync" type="summary_current_entity_sync" />
    </layout>
    
    <layout name="default_summary_layout">
      <templates>
        <template mode="any">/layouts/layout_summary_template.xhtml</template>
      </templates>
      <rows>
        <row>
          <widget>summary_current_document_files</widget>
          <widget>summary_current_document_description</widget>
          <widget>summary_current_document_view</widget>
          <widget>summary_current_document_dublincore</widget>
          <widget>summary_current_document_comments</widget>
        </row>
        <row>
          <widget>summary_current_document_lc_and_version</widget>
          <widget>summary_current_document_actions</widget>
          <widget>summary_current_document_entities</widget>
          <widget>summary_current_document_tagging</widget>
          <widget>summary_current_document_relations</widget>
        </row>
        <row>
          <widget>summary_current_document_publications</widget>
        </row>
        <row>
          <widget>summary_current_document_single_tasks</widget>
        </row>
      </rows>
      <widget name="summary_current_document_entities"
       type="summary_current_document_entities"/>
    </layout>

    <layout name="note_summary_layout">
      <templates>
        <template mode="any">/layouts/layout_summary_template.xhtml</template>
      </templates>
      <rows>
        <row>
          <widget>summary_current_document_description</widget>
          <widget>note_text</widget>
          <widget>summary_current_document_files</widget>
          <widget>summary_current_document_dublincore</widget>
          <widget>summary_current_document_comments</widget>
        </row>
        <row>
          <widget>summary_current_document_entities</widget>
          <widget>summary_current_document_lc_and_version</widget>
          <widget>summary_current_document_actions</widget>
          <widget>summary_current_document_tagging</widget>
          <widget>summary_current_document_relations</widget>
        </row>
        <row>
          <widget>summary_current_document_publications</widget>
        </row>
        <row>
          <widget>summary_current_document_single_tasks</widget>
        </row>
      </rows>
      <widget name="note_text" type="richtext_with_mimetype">
        <fields>
          <field>note:note</field>
          <field>note:mime_type</field>
        </fields>
        <properties mode="view">
          <property name="translatedHtml">
            #{noteActions.translateImageLinks(field_0)}
          </property>
          <property name="cssClass">note_content_block</property>
        </properties>
      </widget>
      <widget name="summary_current_document_entities"
       type="summary_current_document_entities"/>
    </layout>


    <layout name="entity_heading">
      <templates>
        <template mode="any">/layouts/layout_default_template.xhtml
        </template>
      </templates>
      <rows>
        <row>
          <widget>name</widget>
        </row>
        <row>
          <widget>summary</widget>
        </row>
        <row>
          <widget>depiction</widget>
        </row>
        <row>
          <widget>altnames</widget>
        </row>
        <row>
          <widget>entityType</widget>
        </row>
      </rows>
      <widget name="name" type="text">
        <fields>
          <field>dc:title</field>
        </fields>
        <widgetModes>
          <mode value="view">hidden</mode>
          <mode value="any">edit</mode>
        </widgetModes>
        <properties widgetMode="edit">
          <property name="required">true</property>
          <property name="styleClass">dataInputText</property>
        </properties>
      </widget>
      <widget name="summary" type="textarea">
        <fields>
          <field>entity:summary</field>
        </fields>
        <widgetModes>
          <mode value="view">hidden</mode>
          <mode value="any">edit</mode>
        </widgetModes>
        <properties widgetMode="edit">
          <property name="styleClass">dataInputText</property>
        </properties>
      </widget>
      <widget name="depiction" type="template">
        <fields>
          <field>entity:depiction</field>
        </fields>
        <widgetModes>
          <mode value="view">hidden</mode>
          <mode value="any">edit</mode>
        </widgetModes>
        <properties mode="any">
          <property name="template">
            /widgets/extended_file_widget.xhtml
          </property>
        </properties>
      </widget>
      <widget name="altnames" type="namelist">
        <widgetModes>
          <mode value="view">#{nxu:test(empty layoutValue.entity.altnames,
            'hidden', 'view')}</mode>
          <mode value="any">edit</mode>
        </widgetModes>
        <fields>
          <field>entity:altnames</field>
        </fields>
        <subWidgets>
          <widget name="altname" type="text">
            <fields>
              <field></field>
            </fields>
          </widget>
        </subWidgets>
        <properties widgetMode="edit">
          <property name="styleClass">dataInputText</property>
        </properties>
      </widget>
      <widget name="entityType" type="template">
        <widgetModes>
          <mode value="view">view</mode>
          <mode value="any">hidden</mode>
        </widgetModes>
        <properties widgetMode="view">
          <property name="template">
            /widgets/entity_type_widget_template.xhtml
          </property>
        </properties>
      </widget>
    </layout>

    <layout name="person">
      <templates>
        <template mode="any">/layouts/layout_default_template.xhtml
        </template>
      </templates>
      <rows>
        <row>
          <widget>birthDate</widget>
        </row>
        <row>
          <widget>deathDate</widget>
        </row>
        <!-- TODO add widgets for relationship with common relationships 
          with organizations (position) and places (birthplace, residence) -->
      </rows>
      <widget name="birthDate" type="datetime">
        <widgetModes>
          <mode value="view">
            #{empty layoutValue.person.birthDate ?
            'hidden' : 'view'}
          </mode>
        </widgetModes>
        <fields>
          <field>person:birthDate</field>
        </fields>
        <properties widgetMode="edit">
          <property name="styleClass">dataInputText</property>
        </properties>
      </widget>
      <widget name="deathDate" type="datetime">
        <widgetModes>
          <mode value="view">
            #{empty layoutValue.person.deathDate ?
            'hidden' : 'view'}
          </mode>
        </widgetModes>
        <fields>
          <field>person:deathDate</field>
        </fields>
        <properties widgetMode="edit">
          <property name="styleClass">dataInputText</property>
        </properties>
      </widget>
    </layout>

    <layout name="place">
      <templates>
        <template mode="any">/layouts/layout_default_template.xhtml
        </template>
      </templates>
      <rows>
        <row>
          <widget>latitude</widget>
        </row>
        <row>
          <widget>longitude</widget>
        </row>
        <!-- TODO: replace those widgets with a world map -->
      </rows>
      <widget name="latitude" type="text">
        <widgetModes>
          <mode value="view">
            #{empty layoutValue.place.latitude ? 'hidden'
            : 'view'}
          </mode>
        </widgetModes>
        <fields>
          <field>place:latitude</field>
        </fields>
        <properties widgetMode="edit">
          <property name="styleClass">dataInputText</property>
        </properties>
      </widget>
      <widget name="longitude" type="text">
        <widgetModes>
          <mode value="view">
            #{empty layoutValue.place.longitude ?
            'hidden' : 'view'}
          </mode>
        </widgetModes>
        <fields>
          <field>place:longitude</field>
        </fields>
        <properties widgetMode="edit">
          <property name="styleClass">dataInputText</property>
        </properties>
      </widget>
    </layout>

    <layout name="organization">
      <templates>
        <template mode="any">/layouts/layout_default_template.xhtml
        </template>
      </templates>
      <rows>
        <row>
          <widget>inceptionDate</widget>
        </row>
        <row>
          <widget>dissolutionDate</widget>
        </row>
        <!-- TODO add widgets for relationship with common relationships 
          with persons (founder, leader) and places (headquartersLocation) -->
      </rows>
      <widget name="inceptionDate" type="datetime">
        <widgetModes>
          <mode value="view">
            #{empty
            layoutValue.organization.inceptionDate ? 'hidden' : 'view'}
          </mode>
        </widgetModes>
        <fields>
          <field>organization:inceptionDate</field>
        </fields>
        <properties widgetMode="edit">
          <property name="styleClass">dataInputText</property>
        </properties>
      </widget>
      <widget name="dissolutionDate" type="datetime">
        <widgetModes>
          <mode value="view">
            #{empty
            layoutValue.organization.dissolutionDate ? 'hidden' :
            'view'}
          </mode>
        </widgetModes>
        <fields>
          <field>organization:dissolutionDate</field>
        </fields>
        <properties widgetMode="edit">
          <property name="styleClass">dataInputText</property>
        </properties>
      </widget>
    </layout>

    <layout name="entity_occurrence_listing">
      <templates>
        <template mode="any">
          /layouts/layout_listing_ajax_template.xhtml
        </template>
      </templates>
      <properties mode="any">
        <property name="showListingHeader">true</property>
        <property name="showRowEvenOddClass">true</property>
      </properties>
      <columns>
        <column>
          <properties mode="any">
            <property name="useFirstWidgetLabelAsColumnHeader">false</property>
            <property name="columnStyleClass">iconColumn</property>
          </properties>
          <widget>listing_icon_type</widget>
        </column>
        <column>
          <properties mode="any">
            <property name="useFirstWidgetLabelAsColumnHeader">true</property>
            <property name="sortPropertyName">dc:title</property>
          </properties>
          <widget>listing_title_link</widget>
        </column>
        <column>
          <properties mode="any">
            <property name="columnStyleClass">iconColumn</property>
          </properties>
          <widget>listing_lock_icon</widget>
        </column>
        <column>
          <properties mode="any">
            <property name="useFirstWidgetLabelAsColumnHeader">true</property>
            <property name="sortPropertyName">dc:modified</property>
            <property name="defaultSortAscending">false</property>
          </properties>
          <widget>listing_modification_date</widget>
        </column>
        <column>
          <properties mode="any">
            <property name="useFirstWidgetLabelAsColumnHeader">true</property>
            <property name="sortPropertyName">dc:creator</property>
          </properties>
          <widget>listing_author</widget>
        </column>
        <column>
          <properties mode="any">
            <property name="useFirstWidgetLabelAsColumnHeader">true</property>
            <property name="sortPropertyName">
              ecm:currentLifeCycleState
            </property>
          </properties>
          <widget>listing_lifecycle</widget>
        </column>
        <column>
          <properties mode="any">
            <property name="columnStyleClass">iconColumn</property>
          </properties>
          <widget>listing_livedit_link</widget>
        </column>
      </columns>
    </layout>

  </extension>

  <extension target="org.nuxeo.ecm.platform.forms.layout.WebLayoutManager"
    point="widgettypes">

    <widgetType name="summary_current_entity_heading">

      <documentation>
        This widget displays the heading common to all entities:
        depiction, entity type
        and summary. The canonical name is
        expected to be displayed on above the entity
        tabs hence not part
        of this summary widget.

        It requires the following variables to be
        present in the EL context:
        <ul>
          <li>currentDocument: the current document</li>
          <li>currentDocumentType : the Type of the current document
          </li>
        </ul>
      </documentation>

      <handler-class>
        org.nuxeo.ecm.platform.forms.layout.facelets.plugins.TemplateWidgetTypeHandler
      </handler-class>
      <property name="template">
        /widgets/summary/summary_current_entity_heading_widget_template.xhtml
      </property>
    </widgetType>

    <widgetType name="summary_current_entity_view">

      <documentation>
        This widgets displays the view layouts of the currentDocument as
        an Entity

        It requires the following variables to be present in
        the EL context:
        <ul>
          <li>currentDocument: the current document</li>
          <li>currentDocumentType : the Type of the current document
          </li>
        </ul>
      </documentation>

      <handler-class>
        org.nuxeo.ecm.platform.forms.layout.facelets.plugins.TemplateWidgetTypeHandler
      </handler-class>
      <property name="template">
        /widgets/summary/summary_current_entity_view_widget_template.xhtml
      </property>
    </widgetType>

    <widgetType name="summary_current_entity_occurrences">

      <documentation>
        This widgets displays the list of documents linked to the
        currentDocument
        seen as an Entity.

        It requires the following
        variables to be present in the EL context:
        <ul>
          <li>currentDocument: the current document</li>
          <li>semanticEntitiesActions: the seam component able to
            perform
            the relationships queries</li>
        </ul>
      </documentation>

      <handler-class>
        org.nuxeo.ecm.platform.forms.layout.facelets.plugins.TemplateWidgetTypeHandler
      </handler-class>
      <property name="template">
        /widgets/summary/summary_current_entity_occurrences_widget_template.xhtml
      </property>
    </widgetType>

    <widgetType name="summary_current_entity_sync">

      <documentation>
        This widgets displays the list of linked remote entities, the
        ability
        to link to new entities and to sync local data from
        remote sources.

        It requires the following variables to be present
        in the EL context:
        <ul>
          <li>currentDocument: the current document</li>
          <li>semanticEntitiesActions: the seam component able to
            perform
            the remote entity suggestion queries and synchronization
            operation</li>
        </ul>
      </documentation>

      <handler-class>
        org.nuxeo.ecm.platform.forms.layout.facelets.plugins.TemplateWidgetTypeHandler
      </handler-class>
      <property name="template">
        /widgets/summary/summary_current_entity_sync_widget_template.xhtml
      </property>
    </widgetType>

    <widgetType name="namelist">
      <documentation>
        Template widget dedicated to displaying and editing
        list of names (short string list).
      </documentation>
      <handler-class>
        org.nuxeo.ecm.platform.forms.layout.facelets.plugins.TemplateWidgetTypeHandler
      </handler-class>
      <property name="template">/widgets/namelist_widget_template.xhtml
      </property>
    </widgetType>
    
    <widgetType name="summary_current_document_entities">
      <documentation>
        Template widget dedicated to displaying and editiong the list
        of entities linked to the current document.
      </documentation>
      <handler-class>
        org.nuxeo.ecm.platform.forms.layout.facelets.plugins.TemplateWidgetTypeHandler
      </handler-class>
      <property name="template">/widgets/summary/summary_current_document_entities_widget_template.xhtml
      </property>
    </widgetType>
    

  </extension>

</component>
