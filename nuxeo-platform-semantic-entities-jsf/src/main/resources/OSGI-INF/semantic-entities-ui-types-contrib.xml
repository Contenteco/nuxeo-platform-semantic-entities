<?xml version="1.0" encoding="UTF-8"?>

<component name="org.nuxeo.ecm.platform.semanticentities.jsf.types">

  <extension target="org.nuxeo.ecm.platform.types.TypeService" point="types">

    <type id="EntityContainer">
      <label>EntityContainer</label>
      <!-- TODO: find a dedicated icon -->
      <icon>/icons/domain.gif</icon>
      <bigIcon>/icons/domain_100.png</bigIcon>
      <category>Collaborative</category>
      <description>EntityContainer.description</description>
      <default-view>view_documents</default-view>
      <subtypes>
        <type>Person</type>
        <type>Place</type>
        <type>Organization</type>
      </subtypes>
      <layouts mode="any">
        <layout>heading</layout>
      </layouts>
      <layouts mode="edit">
        <layout>heading</layout>
        <layout>dublincore</layout>
      </layouts>
      <contentViews category="content">
        <contentView>document_content</contentView>
      </contentViews>
      <contentViews category="trash_content">
        <contentView>document_trash_content</contentView>
      </contentViews>
    </type>

    <type id="Person">
      <label>Person</label>
      <!-- TODO: find a dedicated icon -->
      <icon>/icons/Person.png</icon>
      <bigIcon>/icons/Person_100.png</bigIcon>
      <category>SimpleDocument</category>
      <description>Person.description</description>
      <default-view>view_documents</default-view>
      <layouts mode="summary">
        <layout>entity_summary_layout</layout>
      </layouts>
      <layouts mode="any">
        <layout>entity_heading</layout>
        <layout>person</layout>
      </layouts>
    </type>

    <type id="Organization">
      <label>Organization</label>
      <!-- TODO: find a dedicated icon -->
      <icon>/icons/Organization.png</icon>
      <bigIcon>/icons/Organization_100.png</bigIcon>
      <category>SimpleDocument</category>
      <description>Organization.description</description>
      <default-view>view_documents</default-view>
      <layouts mode="summary">
        <layout>entity_summary_layout</layout>
      </layouts>
      <layouts mode="any">
        <layout>entity_heading</layout>
        <layout>organization</layout>
      </layouts>
    </type>

    <type id="Place">
      <label>Place</label>
      <!-- TODO: find a dedicated icon -->
      <icon>/icons/Place.png</icon>
      <bigIcon>/icons/Place_100.png</bigIcon>
      <category>SimpleDocument</category>
      <description>Place.description</description>
      <default-view>view_documents</default-view>
      <layouts mode="summary">
        <layout>entity_summary_layout</layout>
      </layouts>
      <layouts mode="any">
        <layout>entity_heading</layout>
        <layout>place</layout>
      </layouts>
    </type>

  </extension>
</component>
