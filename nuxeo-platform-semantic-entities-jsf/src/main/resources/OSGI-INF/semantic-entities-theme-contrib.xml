<?xml version="1.0"?>
<component name="org.nuxeo.ecm.platform.semanticentities.theme">

  <require>org.nuxeo.theme.nuxeo.default</require>

  <extension target="org.nuxeo.theme.services.ThemeService" point="views">

    <view name="nuxeo5 includes" template-engine="jsf-facelets"
      merge="true">
      <format-type>widget</format-type>
      <resource>semantic-entities.css</resource>
      <resource>condense.js</resource>
    </view>

  </extension>

  <extension target="org.nuxeo.theme.services.ThemeService" point="resources">

    <resource name="semantic-entities.css">
      <path>css/semantic-entities.css</path>
    </resource>

    <resource name="condense.js">
      <path>scripts/condense.js</path>
    </resource>

  </extension>

</component>
